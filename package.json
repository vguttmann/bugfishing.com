{
  "name": "website",
  "version": "1.0.1",
  "description": "My website, made with Next.js, SSR, and MDX.",
  "author": "vguttmann <git@bugfishing.com>",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build-site": "yarn next build",
    "post-build": "node ./src/lib/genRss.mjs",
    "build": "yarn build-site && yarn post-build",
    "start": "yarn next start",
    "lint": "yarn next lint",
    "export": "yarn next export && rm -rf /var/www/out && cp -r out /var/www",
    "prepare": "husky install"
  },
  "private": true,
  "dependencies": {
    "@next/mdx": "^12.1.4",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^2.28.0",
    "dayjs": "^1.11.0",
    "glob": "^7.2.0",
    "gray-matter": "^4.0.3",
    "hastscript": "^7.0.2",
    "mdx-prism": "^0.3.4",
    "next": "^12.1.4",
    "next-mdx-remote": "^2.1.0",
    "next-seo": "^5.4.0",
    "prettier": "^2.6.2",
    "prismjs": "^1.27.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-icons": "^4.3.1",
    "reading-time": "^1.5.0",
    "rehype": "^12.0.1",
    "rehype-external-links": "^1.0.1",
    "remark-autolink-headings": "^7.0.1",
    "remark-capitalize": "^1.1.0",
